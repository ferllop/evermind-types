{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "allowJs": true,
    "noEmit": true,
    "checkJs": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "declaration": true,
  }
}
